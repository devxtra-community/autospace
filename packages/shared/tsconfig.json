{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",

    "baseUrl": ".",
    "paths": {
      "@autospace/shared": ["../../packages/shared/dist"],
      "@autospace/shared/*": ["../../packages/shared/dist/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
